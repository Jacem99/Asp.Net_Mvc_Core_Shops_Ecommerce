@model Marka;
@{
    ViewData["Title"] = "Create_Marka";
}

<h1 class="alert alert-light text-center">Edit</h1>
<div class="container rounded p-1">
    <form asp-action="Edit" class="col-7 col-lg-5" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="text-muted"></label>
            <input asp-for="Name" class="form-control" />

        </div>
        <div class="form-group ">
            <input type="submit" class="btn btn-primary text-center" value="Save" />
            <a asp-action="Index" class="btn btn-secondary text-center">Back</a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
