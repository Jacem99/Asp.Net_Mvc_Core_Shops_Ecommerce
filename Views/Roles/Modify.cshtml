@model IdentityRole;

@{
    ViewData["Title"] = Model.Id ==null ? "Create" : "Edit";
}

<h1 class="alert alert-light text-center">@(Model.Id != null ? "Edit" : "Create")</h1>
<div class="container rounded p-1">
    <div class="row">
        <form asp-action="Modify" class="col-md-7" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.Id != null)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="form-group col-md-9">
                <label asp-for="Name" class="text-muted"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group col-md-12">
                <input type="submit" class="btn btn-primary text-center col-md-4 mb-1" value=@(Model.Id !=null ? "Edit" : "Save") />
                <a asp-action="Index" class="btn btn-secondary text-center col-md-4 mb-1">Back</a>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
